{{> header}}
<div class="contents">
  <article class="page">
    <h1>{{ title }}</h1>
    <p class="date"><time>{{formatDate date}}</time></p>
    {{#if this.tags}}
      <p class="tags">
        {{#eachCommaSeparated this.tags}}
          <span>{{this}}</span>
        {{/eachCommaSeparated}}
      </p>
    {{/if}}
    {{{ contents }}}
  </article>
</div>
{{> footer}}
